<Window x:Class="ierg3080_Bombman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ierg3080_Bombman"
        mc:Ignorable="d"
        Title="MainWindow" Height="621" Width="800">
    <Grid>
        <Canvas x:Name="GameCanvas" HorizontalAlignment="Left" Height="500" Focusable="True" Margin="52,0,0,0" VerticalAlignment="Top" Width="680" Background="#FF3C3C3C" KeyDown="keypressed" KeyUp="keyreleased">
            <Rectangle x:Name="Player" Height="18" Canvas.Left="187" Fill="Yellow" Canvas.Top="159" Width="18"/>
        </Canvas>
        <Grid HorizontalAlignment="Left" Height="96" Margin="0,504,0,0" VerticalAlignment="Top" Width="800" Background="LightGray">
            <Button x:Name="Restart_button" Content="Restart" HorizontalAlignment="Left" Margin="95,0,0,0" VerticalAlignment="Center" Height="36" Width="74" Click="Restart_buttonclick"/>
            <Label x:Name="position" Content="bomb Position" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="500,0,0,0" Height="50" Width="100"></Label>
        </Grid>
    </Grid>

</Window>
